@page
@model LocalStorageFileManager.Pages.File.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FileItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileItem.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileItem.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileItem.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileItem.Size)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            File Content
        </dt>
        <dd class="col-sm-10">
            @Html.TextAreaFor(model => model.FileContent, new { @cols = 40, @rows = 20 })
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="FileItem.Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
