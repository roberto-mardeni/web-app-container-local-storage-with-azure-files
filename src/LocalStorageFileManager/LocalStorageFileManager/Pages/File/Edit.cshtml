@page
@model LocalStorageFileManager.Pages.File.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FileItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileItem.Name" />
            <div class="form-group">
                <label asp-for="FileItem.Name" class="control-label"></label>
                <input asp-for="FileItem.Name" class="form-control" />
                <span asp-validation-for="FileItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileContent" class="control-label"></label>
                <textarea asp-for="FileContent" class="form-control" rows="40" cols="20"></textarea>
                <span asp-validation-for="FileContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
